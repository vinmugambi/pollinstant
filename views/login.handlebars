<div class="container login" style="padding-top: 8em;">
	<div class="row">
		<div class="col-sm-offset-3 col-xs-offset-1 col-xs-10 col-md-offset-4 col-lg-offset-4 col-lg-4 col-md-5 col-sm-6 text-center"
		style="padding: 3em 1em 3em 1em;background: #f6f6fb;border-top: 0.2em solid #c4ced5;border-bottom: 1px solid #c4ced5;">
			<form id="login">
				<caption>
					<h3 style="">Login</h3>
				</caption>
				<div class="input-group" id="username" style="margin-bottom: 0.5em;">
					<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
					<input type="email" class="form-control" placeholder="Enter Your Email Adress" name="username" required/>
				</div>
				<div class="input-group" id="password">
					<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
					<input type="password" class="form-control" placeholder="Enter Your Password" name="password" required/>
				</div>
				<div class="error-log" style="height:1em"></div>
				<div id="has-sucess" style="height:1em"></div>
				<button id="login" type="Submit" class="btn btn-primary btn-lg pull-right">Login</button>
			</form>


			<div class="text-left" style="margin-top:1em">
				<ul class="list-inline">
					<li><a href="/register"> Create Account</a></li>
					<li><a href="/"> Forgot Password</a></li>
				</ul>
			</div>

		</div>
	</div>
</div>
